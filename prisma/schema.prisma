generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model CognitoSubmission {
    id             String    @id @default(cuid())
    formId         String
    formTitle      String?
    firstName      String?
    lastName       String?
    companyName    String?
    userEmail      String
    payload        Json
    entryCreatedAt DateTime?
    entryUpdatedAt DateTime?
    createdAt      DateTime  @default(now())
    updatedAt      DateTime  @updatedAt

    @@unique([formId, userEmail])
    @@index([userEmail])
}
